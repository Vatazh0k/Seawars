<Page x:Class="Seawars.WPF.View.Pages.Game.ConnectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Seawars.WPF.View.Pages.Game"
      xmlns:commands="clr-namespace:Seawars.WPF.Common.Commands"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="620"
      Title="ConnectionPage">

    <Border 
        Background="#272537"
        CornerRadius="40">

        <Grid>

            <Label
                >

            </Label>

            <Button
                HorizontalAlignment="Right"
                Width="40"
                VerticalAlignment="Top"
                Content="X"
                Margin="0,15,10,20"
                FontSize="26"
                FontFamily="Bahnschrift SemiBold"
                Style="{StaticResource LightweightButton}">
                <Button.Command>
                    <commands:CloseCommand/>
                </Button.Command>
            </Button>

        </Grid>

    </Border>

</Page>
